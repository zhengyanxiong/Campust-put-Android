<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_shape">
        <ImageView
            android:id="@+id/custom_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dip"
            android:padding="5dip"
            android:src="@mipmap/notice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/custom_icon"
            android:layout_margin="8dip"
            android:padding="5dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_custom_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:text="标题"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_custom_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="16.49"
                    android:paddingRight="25dp"
                    android:textColor="#636060"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_custom_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:textColor="#000000"
                android:text="content"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_custom_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textColor="#000000"
                android:visibility="invisible"
                android:text="content"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>